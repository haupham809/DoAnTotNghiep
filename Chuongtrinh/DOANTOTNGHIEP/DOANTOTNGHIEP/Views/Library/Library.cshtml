@using Spire.PdfViewer.Asp;
@{

    Layout = "~/Views/Shared/Layoutclass.cshtml";
    var user = Session["user"] as DOANTOTNGHIEP.Models.TaiKhoan;
    string nguoitao = user.TenDangNhap;
    DOANTOTNGHIEP.Models.ThongBao tb = new DOANTOTNGHIEP.Models.ThongBao();
    var malop = Session["malop"].ToString();

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <style type="text/css">
        .anhload {
            position: relative;
            margin: auto;
            display: block;
            top: 20%;
        }

        form {
            margin-block-end: 0em;
        }

        .noidung {
            width: 100%;
            max-width: 90%;
            border: 1px solid black;
            border-radius: 5px;
            font-size: 20px;
            outline: none;
            background-color: #BDBDBD;
            color: white;
        }

            .noidung:focus {
                background-color: white;
                color: black;
            }

        #tailieu {
            margin-top: 40px
        }
    </style>
    <script type="text/javascript">
        $(document).ready(function () {
            reset();
            $('.headthuvien').css("color", "black");
            $('.headthuvien').css("background-color", "white");

            $(window).on('load', function (event) {
                $('body').removeClass('preloading');
                // $('.load').delay(1000).fadeOut('fast');
                $('.loader').delay(1000).fadeOut('fast');
            });


            $('#search').trigger("click");
            $('#search').click(function () {
                $('.loader').css("display", "block");
                $('#tailieu').css("display", "none");
            });


        });



    </script>
</head>
<body style="">
    <div style="width:100%;border-bottom:1px solid black">

        <div style="text-align:center;padding:10px;background-color:#292929;z-index:999;position:fixed;top:auto;right:0px;left:0px;display:grid;grid-template-columns:auto 50px;">
            @using (Ajax.BeginForm("Searchlibrary", "Library", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "tailieu", InsertionMode = InsertionMode.Replace }))
            {
                <div style="flex:1">
                    <button type="submit" class="glyphicon glyphicon-search " style="font-size:20px;background-color:transparent;border:0px;color:white" id="search"></button>
                    <input class="noidung" type="text" name="noidungcantin" placeholder="search">
                </div>
            }
            <button class="glyphicon glyphicon-open" style="font-size: 20px; background-color: transparent; border: 0px; color: white; flex: 1" data-toggle="modal" data-target="#myModal"></button>

        </div>

        <div class="container">


            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Upload tài liệu</h4>
                        </div>
                        @using (Html.BeginForm("ActionResult", "Library", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="modal-body">
                                <p>Tiêu đề tài liệu</p> <input type="text" placeholder="Nhập email" style="border-radius:5px;outline:none; width:300px" class="emailthamgia" />
                                <p>Chọn tài liệu</p> <input type="file" id="101-1" class="fileupload"  name="file" style="display:none" />
                               
                            </div>
                            <div class="modal-footer">
                                <button class="join btn btn-info btn-lg" style=" padding: 5px; padding-left: 15px; padding-right: 15px; color: white; border-radius: 20px; margin: 2%">Tải lên</button>

                            </div>
                        }
                        </div>

                </div>
            </div>

        </div>

    </div>
    <iframe src="~/Content/BTTL/RLSV_CNTT59_2021-2022_HKy1.pdf#toolbar=0&navpanes=0&scrollbar=0"
            frameBorder="0"
            scrolling="auto"
            height="100%"
            width="100%"></iframe>
    <div>
        <div class="loader" style="width:100%;height:100%;background-color:#292929;display:none">
            <img src="~/Content/image/Icon/b7671b668a78e0208b9c2d1c36802ce8.gif" class="anhload" />
            <span class="fas fa-spinner xoay icon"></span>
        </div>
        <div id="tailieu">

        </div>


    </div>

</body>
</html>
