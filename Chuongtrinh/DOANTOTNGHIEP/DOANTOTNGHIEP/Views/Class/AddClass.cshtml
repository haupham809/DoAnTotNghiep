<style>
    .frameclass {
        width: 100%;
        height: 100%;
        position: fixed;
        display: block;
        margin-top: -20px;
        background-size: cover;
    }

    .createclass {
        position: relative;
        text-align: left;
        border: 0px solid #000000;
        width: 500px;
        height: auto;
        background: #5858FA;
        background-color: white;
        padding: 40px;
        border-radius: 5px;
        margin: 10% auto;
        display: block;
    }

    textarea {
        border-radius: 5px;
        resize: none;
        outline: none;
        width: 400px;
        max-width: 500px;
        height: 100px;
        border: 1px solid #A9A9A9;
        padding: 12px 40px 12px 20px;
    }

    .glyphicon-remove-circle:hover {
        background-color: black;
        border-radius: 10px;
    }

    .addclass {
        margin-top: 20px;
        border-radius: 50px;
        background-image: linear-gradient(60deg, #5858FA, #081C46);
        padding-right: 20px;
        padding-left: 20px
    }

    .divaddclass {
        background-image: linear-gradient(60deg, #5858FA, #081C46);
        position: relative;
        width: 90%;
        right: 20px;
        left: 20px;
        top: -70px;
        border-radius: 5px;
        text-align: left;
        padding: 20px
    }

    textarea::placeholder {
        color: black;
    }

    textarea:focus, textarea:focus::placeholder, textarea:focus + i {
        color: #ff1464;
    }
</style>
<div class="frameclass">
  >
    <div class="createclass">

        @using (Html.BeginForm("createclass", "Class", FormMethod.Post))
        {
            <div class="divaddclass"><label style="color:white">Add Class</label><br /></div>



            <div class="form-group bmd-form-group" style="margin-top:-20px">
                <label class="bmd-label-floating" style="color:white;">Class Name</label><br />
                <textarea name="classname" required placeholder="Nhập tên lớp" ></textarea>

            </div>
            <div class="form-group bmd-form-group">
                <label class="bmd-label-floating" style="color:white;">Class Infro</label><br />
                <textarea name="inforclass" required placeholder="Nhập thông tin lớp"></textarea>
            </div>


            <div class="form-group bmd-form-group">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>


        }

    </div>

</div>
