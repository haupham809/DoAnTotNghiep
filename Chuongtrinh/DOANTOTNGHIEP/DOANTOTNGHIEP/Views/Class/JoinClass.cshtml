@{
    Layout = "~/Views/Shared/LayoutHome.cshtml";

}
<style type="text/css">

    
        input::placeholder {
            color: black;
        }

        input:focus, input:focus::placeholder, input:focus + i {
            color: #ff1464;
        }
    .frameclass {
        width: 100%;
        height: 100%;
        position: fixed;
        display: block;
        margin-top: -20px;
        background-size: cover;
    }

    .Joinclass {
        position: relative;
        text-align: left;
        border: 0px solid #000000;
        width: 400px;
        height: auto;
        background: #5858FA;
        background-color: white;
        padding: 40px;
        border-radius: 5px;
        margin: 10% auto;
        box-shadow: 10px 10px 10px rgb(0 0 0 / 20%);
        display: block;
    }

   

    .glyphicon-remove-circle:hover {
        background-color: black;
        border-radius: 10px;
    }
    .divjoinclass {
        background-image: linear-gradient(60deg, #5858FA, #081C46);
        position: relative;
        width: 90%;
        right: 20px;
        left: 20px;
        top: -70px;
        border-radius: 5px;
        text-align: left;
        padding: 20px
    }
    input {
        outline: none;
        max-width: 100%;
    }
</style>

<div class="frameclass">
   


    <div class="Joinclass">
        @using (Html.BeginForm("checkclass", "Class", FormMethod.Post))
        {
            <div class="divjoinclass"><label style="color:white">Join Class</label><br /></div>

            @Html.AntiForgeryToken()

            <div class="form-group bmd-form-group" style="margin-top:-20px">
                <label class="bmd-label-floating" style="color:white">Class Code</label><br />
                <input class="form-control" type="text" name="maclassid" placeholder="Mã Lớp" required style="width:100%" /><br />
            </div>


            <div class="form-group bmd-form-group">
                <button type="submit" class="btn btn-primary " >Join</button>
            </div>


            @Html.ValidationMessage("ErrorJoinClass", new { @class = "text-danger", @color = "black" })

        }

    </div>


</div>
