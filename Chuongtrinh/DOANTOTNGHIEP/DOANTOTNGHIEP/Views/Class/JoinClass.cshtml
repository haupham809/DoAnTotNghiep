@{
    Layout = "~/Views/Shared/LayoutHome.cshtml";

}
<style type="text/css">

    input {
        border-radius: 5px;
        width: 90%;
        max-width: 90%;
        outline: none;
    }

    input {
        background: rgba(0,0,0,0.1);
        border-bottom: 1px solid #444;
        padding: 12px 40px 12px 20px;
        color: white;
    }

        input::placeholder {
            color: white;
        }

        input:focus, input:focus::placeholder, input:focus + i {
            color: #ff1464;
        }
    .frameclass {
        width: 100%;
        height: 100%;
        position: fixed;
        display: block;
        background: #040d21;
        margin-top: -20px;
        background-image: url(https://github.githubassets.com/images/modules/site/home/hero-glow.svg);
        background-size:cover

    }

    .Joinclass {
        position: relative;
        text-align: left;
        border: 0px solid #000000;
        width: 400px;
        height: auto;
        background: #5858FA;
        background-color: rgba(0,0,0,0.3);
        padding: 40px;
        border-radius: 5px;
        margin: 10% auto;
        display: block;
    }

   

    .glyphicon-remove-circle:hover {
        background-color: black;
        border-radius: 10px;
    }
    .divjoinclass {
        background-image: linear-gradient(60deg, #5858FA, #081C46);
        position: relative;
        width: 90%;
        right: 20px;
        left: 20px;
        top: -70px;
        border-radius: 5px;
        text-align: left;
        padding: 20px
    }
    input{
        outline:none;
    }
</style>
<link href="~/Content/css/snow.css" rel="stylesheet" />

<div class="frameclass">
    <div class="snowflakes" aria-hidden="true">
        <div class="snowflake">.</div>
        <div class="snowflake">.</div>
        <div class="snowflake">.</div>
        <div class="snowflake">.</div>
        <div class="snowflake">.</div>
        <div class="snowflake">.</div>
        <div class="snowflake">.</div>
        <div class="snowflake">.</div>
        <div class="snowflake">.</div>
        <div class="snowflake">.</div>
    </div>


    <div class="Joinclass">
        @using (Html.BeginForm("checkclass", "Class", FormMethod.Post))
        {
            <div class="divjoinclass"><label style="color:white">Join Class</label><br /></div>

            @Html.AntiForgeryToken()

            <div class="form-group bmd-form-group" style="margin-top:-20px">
                <label class="bmd-label-floating" style="color:white">Class Code</label><br />
                <input type="text" name="maclassid" placeholder="Mã Lớp" required style="width:100%" /><br />
            </div>


            <div class="form-group bmd-form-group">
                <button type="submit" class="btn btn-primary " style=" margin-top: 20px; border-radius: 50px; background-image: linear-gradient(to right, #1A6EFF, purple); padding-right: 20px; padding-left: 20px">Join</button>
            </div>


            @Html.ValidationMessage("ErrorJoinClass", new { @class = "text-danger", @color = "black" })

        }

    </div>


</div>
