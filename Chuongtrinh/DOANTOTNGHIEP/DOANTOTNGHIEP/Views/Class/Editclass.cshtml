@model  DOANTOTNGHIEP.Models.LopHoc
@{

    ViewData["Title"] = "Edit class";
    Layout = "~/Views/Shared/Layoutclass.cshtml";
    
}
<style type="text/css">


    .frameaccount {
        width: 100%;
        height: 100%;
        position: fixed;
        display: block;
        background-size:cover;
        margin-top: -20px;
    }

    .account {
        position: relative;
        text-align: left;
        border: 0px solid #000000;
        width: 30%;
        height: 80%;
        background: #5858FA;
        background-color: white;
        padding: 40px;
        border-radius: 10px;
        margin: 50px auto;
        display: block;
    }

    textarea {
        border-radius: 5px;
        resize: none;
        outline: none;
        width: 400px;
        max-width: 500px;
        height: 100px;
        background: rgba(0,0,0,0.2);
        border-bottom: 1px solid #444;
        padding: 12px 40px 12px 20px;
        color: white;
    }
        textarea::placeholder {
            color: white;
        }

        textarea:focus, textarea:focus::placeholder, textarea:focus + i {
            color: #ff1464;
        }
    .glyphicon-remove-circle:hover {
        background-color: black;
        border-radius: 10px;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {

        $("#image").change(function () {
            $("#hinhanh").remove();
            var anh = $("#image").get(0);
            $("#anh").before("<img src=" + URL.createObjectURL(anh.files[0]) + " height='100' style='border-radius:10px;' id='hinhanh' /><br />");

        });

    });


</script>

<div class="frameaccount">

    

    <div class="account">
        @using (Html.BeginForm("Checkeditclass", "Class", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <div style=" background-image: linear-gradient(60deg, #5858FA, #081C46); position: relative; width: 90%; right: 20px; left: 20px; top: -60px; border-radius: 5px; text-align: left; padding: 20px"><label style="color:white">Edit Class</label><br /><label style="color:white">Complete your Class</label></div>



            <div class="form-group bmd-form-group" style="margin-top:-40px">
                <label class="bmd-label-floating" style="color:white">Class Name</label><br />

                @Html.TextAreaFor(model => model.TenLop, new { @class = "text1", @autofocus = "autofocus", placeholder = "Class Name", @required = "required" })<br />

            </div>

            <div class="form-group bmd-form-group">
                <label class="bmd-label-floating"  style="color:white">Class information</label><br />
                @Html.TextAreaFor(model => model.ThongTinLopHoc, new { @class = "text2", @autofocus = "autofocus", placeholder = "Class information ", @required = "required" })<br />
            </div>


            <div class="form-group bmd-form-group">

                <img src=@Model.Hinhanh height="100" style="border-radius: 10px;max-width:100%" id="hinhanh" />
                <br />
                <label class="glyphicon glyphicon-picture" for="image" id="anh" style="font-size:30px;color:white;"></label>
                <input type="file" id="image" style="display:none;" accept=".png, .jpg, .jpeg" name="file" />
            </div>

            <div class="form-group bmd-form-group">
                <button type="submit" class="btn btn-primary " style="margin-top:20px;border-radius:50px">Update Class</button>

            </div>



            @Html.ValidationMessage("Erroreditaccount", new { @class = "text-danger", @color = "red" })


        }

    </div>




</div>
