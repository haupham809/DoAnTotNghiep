@model List<DOANTOTNGHIEP.Models.Kiemtradaovan>
@{
    Layout = "~/Views/Shared/Layoutclass.cshtml";
}
<script>
    $(function () {
        $('.selectperson').change(function () {
            $(".filesosanh").attr('src', $(this).find('option:selected').data('file1') + "#toolbar=0&navpanes=0&scrollbar=0");
            $(".filecansosanh").attr('src', $(this).find('option:selected').data('file2') + "#toolbar=0&navpanes=0&scrollbar=0");
        });
    });
        
       
</script>

@{
    if (Model.Count >= 1)
    {
    <div style="margin-top:20px">


        <select class="form-control selectperson" style="margin-left:50px" >
            @{
                foreach (var i in Model)
                {
                        <option data-file1="@i.Tailieu1.NoiLuu" data-file2="@i.Tailieu2.NoiLuu" >@String.Format("{0:0.00}", @i.Percents)</option>

                }
            }

        </select>
        <div style="padding:10px">
            <div style="float: left; min-width: 50%; max-width: 50%; padding: 10px">

                <iframe src="@Model.ToArray()[0].Tailieu1.NoiLuu"
                        frameBorder="0"
                        scrolling="auto"
                        height="100%"
                        width="100%" class="filesosanh"></iframe>


            </div>
            <div style="float: right; min-width: 50%; max-width: 50%;padding:10px">
                <iframe src="@Model.ToArray()[0].Tailieu2.NoiLuu"
                        frameBorder="0"
                        scrolling="auto"
                        height="100%"
                        width="100%" class="filecansosanh"></iframe>
            </div>
        </div>
    </div>
    }
}

