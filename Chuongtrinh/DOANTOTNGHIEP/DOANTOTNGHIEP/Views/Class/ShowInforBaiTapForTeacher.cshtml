@{
    Layout = "~/Views/Shared/Layoutclass.cshtml";
    var baitracnhgiem = ViewData["baitracnghiem"] as List<DOANTOTNGHIEP.Models.BaiTapTN>;
    var baituluan = ViewData["baituluan"] as List<DOANTOTNGHIEP.Models.BaiTapTL>;
    DOANTOTNGHIEP.Models.DB db = new DOANTOTNGHIEP.Models.DB();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <style type="text/css">
        .heade {
            background-color: cornflowerblue;
            width: 100%
        }

        th {
            padding: 10px;
        }

        .

        tbody.tr.th {
        }
      
    </style>
    <script type="text/javascript">
        function checkdaovan(i) {
            $("#modalloading").css("display", "block");
            $.ajax({
                url: '/Class/checkdaovan', type: 'post',
                data: {
                    mabaitap: i,
                    
                }

            }).done(function (result) {
                if (result == "true") {
                    location.reload();
                }

                $("#modalloading").css("display", "none");
                
                
            });
        }
        function buttontoview(link) {
            location.replace(link)
        }
    </script>
</head>
<body >
    <div style="margin: 20px">
        @if (baitracnhgiem != null)
        {
            <a href="~/Class/ShowcauhoiTracnghiem/@baitracnhgiem[0].MaBaiTap" class="chitiet">Xem chi tiết bài tập </a>
            <a href=@ViewBag.excel style=" background-image: linear-gradient(to right,#0404B4,#A901DB); padding: 5px; padding-left: 15px; padding-right: 15px; color: white; border-radius: 5px; margin-right: 2%" download>Xuất excel </a>
            <a href=@ViewBag.pdf style=" background-image: linear-gradient(to right,#0404B4,#A901DB); padding: 5px; padding-left: 15px; padding-right: 15px; color: white; border-radius: 5px; margin-right: 2%" download>Xuất PDF </a>

            <table style="margin-top:10px;width:100%">
                <thead>
                    <tr class="heade" role="row">





                        <th>
                            <label></label>

                        <th>
                            <label>Tên</label>
                        </th>
                        <th>
                            <label>Ngày Nộp</label>
                        </th>
                        <th>
                            <label>Ngày kết thúc</label>
                        </th>
                        <th>
                            <label>Điểm</label>
                        </th>
                        <th>
                            <label>Trạng Thái</label>
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in baitracnhgiem)
                    {


                        <tr>





                            <th style="background-color:#E6E6E6;border:3px solid white">
                                <img src=@i.TaiKhoan.HinhAnh width="40" height="40" style="border-radius:5px;" />

                            </th>
                            <th style="background-color:#E6E6E6;border:3px solid white">
                                <label>@i.TaiKhoan.Ho  @i.TaiKhoan.Ten</label>

                            </th>
                            <th style="background-color:#E6E6E6;border:3px solid white">
                                @if (i.NgayNop != null)
                                {
                                    <label>@i.NgayNop.Value.ToString(string.Format("HH:mm:ss dd/MM/yyyy"))</label>
                                }



                            </th>
                            <th style="background-color:#E6E6E6;border:3px solid white">
                                <label>@i.BaiTap.ThoiGianKetThuc.Value.ToString(string.Format("HH:mm:ss dd/MM/yyyy"))</label>

                            </th>
                            <th style="background-color:#E6E6E6;border:3px solid white">
                                <label>@i.Diem</label>
                            </th>
                            <th style="background-color:#E6E6E6;border:3px solid white">

                                @{
                                    if (i.NgayNop == null)
                                    {
                                        <label style="color:red">Chưa Nộp</label>
                                    }
                                    else if (i.NgayNop != null)
                                    {
                                        if (i.BaiTap.ThoiGianKetThuc >= i.NgayNop)
                                        {
                                            <label>Đã nộp</label>
                                        }
                                        else if (i.BaiTap.ThoiGianKetThuc < i.NgayNop)
                                        {
                                            <label style="color:red">Nộp muộn</label>
                                        }
                                    }
                                }

                            </th>
                            <th style="background-color:#E6E6E6;border:3px solid white">
                                <a href="~/Class/ShowInforTN/?ten=@i.NguoiNop&ma=@i.MaBaiNop" class="glyphicon glyphicon-edit"></a>
                            </th>

                        </tr>
                    }
                </tbody>
            </table>
        }
        @if (baituluan != null)
        {
            <button onclick="buttontoview(`showcauhoituluan/@baituluan[0].MaBaiTap`)" type="button" class="btn btn-primary">Xem chi tiết bài tập </button>
            <button onclick="checkdaovan(@baituluan[0].MaBaiTap)" type="button" class="btn btn-primary">Kiểm Tra Đạo Văn </button>
            <a href="@ViewBag.excel" class="link-info" style="margin-left:10px;font-size:20px" download>Xuất excel </a>
            <a href="@ViewBag.pdf" class="link-info" style="margin-left:10px;font-size:20px" download>Xuất PDF </a>


            <table style="margin-top:10px;width:100%" class="table">

                <thead>
                    <tr class="heade" role="row">





                        <th>
                            <label></label>

                        <th>
                            <label>Tên</label>
                        </th>
                        <th>
                            <label>Ngày Nộp</label>
                        </th>
                        <th>
                            <label>Ngày kết thúc</label>
                        </th>
                        <th>
                            <label>Điểm</label>
                        </th>
                        <th>
                            <label>Trạng Thái</label>
                        </th>
                        <th>
                            <label>Đạo Văn</label>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>


                    @foreach (var i in baituluan)
                    {


                        <tr>





                            <th style="background-color:#E6E6E6;border:3px solid white">
                                <img src=@i.TaiKhoan.HinhAnh width="40" height="40" style="border-radius:5px;" />

                            </th>
                            <th style="background-color:#E6E6E6;border:3px solid white">
                                <label>@i.TaiKhoan.Ho  @i.TaiKhoan.Ten</label>

                            </th>
                            <th style="background-color:#E6E6E6;border:3px solid white">
                                @if (i.NgayNop != null)
                                {
                                    <label>@i.NgayNop.Value.ToString(string.Format("HH:mm:ss dd/MM/yyyy"))</label>
                                }

                            </th>
                            <th style="background-color:#E6E6E6;border:3px solid white">
                                <label>@i.BaiTap.ThoiGianKetThuc.Value.ToString(string.Format("HH:mm:ss dd/MM/yyyy"))</label>

                            </th>
                            <th style="background-color:#E6E6E6;border:3px solid white">
                                <label>@i.Diem</label>

                            </th>
                            <th style="background-color:#E6E6E6;border:3px solid white">

                                @{
                                    if (i.NgayNop == null)
                                    {
                                        <label style="color:red">Chưa Nộp</label>
                                    }
                                    else if (i.NgayNop != null)
                                    {
                                        if (i.BaiTap.ThoiGianKetThuc >= i.NgayNop)
                                        {
                                            <label>Đã nộp</label>
                                        }
                                        else if (i.BaiTap.ThoiGianKetThuc < i.NgayNop)
                                        {
                                            <label style="color:red">Nộp muộn</label>
                                        }
                                    }
                                }

                            </th>
                            <th style="background-color:#E6E6E6;border:3px solid white">
                                @{
                                    var dbfile = i.TTBaiTapTLs.Where(x => x.MaBaiNop.Equals(i.MaBaiNop)).ToList();
                                    foreach (var ifile in dbfile)
                                    {
                                        var dv = ifile.Plagiarism1.Where(x => x.Mafile.Equals(ifile.Ma)).OrderBy(y => y.Percents).ToList();
                                        foreach (var daovan in dv)
                                        {
                                            <label>@String.Format("{0:0.00}", @daovan.Percents)</label>
                                            break;
                                        }
                                    }

                                }
                            </th>
                            <th style="background-color:#E6E6E6;border:3px solid white">
                                <a href="~/Class/ShowInforTL/?ten=@i.NguoiNop&ma=@i.MaBaiNop" class="glyphicon glyphicon-edit"></a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>

        }

    </div>

    

</body>

</html>
