@model List<DOANTOTNGHIEP.Models.LopHoc>

<link href="~/Content/animate.css" rel="stylesheet" />
<style type="text/css">
    .lop:hover {
        background-color: lightblue;
    }

    .ttlop::-webkit-scrollbar {
        width: 5px;
        display:none;
    }

    ::-webkit-scrollbar-thumb {
        background: #1C1C1C;
    }

        ::-webkit-scrollbar-thumb:hover {
            background: #555;
        }
    .lop {
        color: black;
        background-color: white
    }

        
    .menuleft {
        position: fixed;
        left: 0px;
        top: 0;
        background-color: white;
        width: 250px;
        height: 100%;
        margin-left: -250px;
        animation-name: example1;
        animation-duration: 0.5s;
    }
    .ttlop{
        overflow-y:scroll;
    }
    
    @@-webkit-keyframes example1 {
        0%   { left:-250px; top:0px;}
  100%  {background-color:blue; left:0px; top:0px;}

}
       @@-webkit-keyframes example2 {
  0%   { left:0px; top:0px;}
  100%  {background-color:blue; left:-250px; top:0px;}

}

 


</style>
<script type="text/javascript">
    $(document).ready(function () {
      
        
        $('.btnanmenu').click(function () {
            $('.menu').css("display", "none");
            $('.menuleft').css("margin-left", "-250px");
        });
        $('.btnanmenu').cli(function () {
            $('.menu').css("display", "none");
            $('.menuleft').css("margin-left", "-250px");
        });

    });
    $(".menu").click
        (
            function (e) {
                if (e.target.className !== "menuleft" && e.target.className !== "ttlop"  ) {
                    
                    $('.menu').css("display", "none");
                    $('.menuleft').css("margin-left", "-250px");
                }
            }
        );

</script>
<div class="menu" style="width:100%;height:100%;background-color:rgb(0,0,0,0.5);position: fixed;left:0px;top:0;">
    <div class="menuleft ">

        <div style="color:white;width:250px;max-height:50px " class="bg-primary">
            <a href="~/TrangChu/Index" style="max-height: 50px; padding: 15px 15px; " class="navbar-header">
                <img class="d-inline-block align-top" src="~/Content/image/Icon/classroom-icon-png-8.png" height="25" width="80" style="margin-right:80px;" />
            </a>
            <button style="background-color:transparent;border:0px;font-size:25px;height:50px" class="glyphicon glyphicon-menu-hamburger btnmenu">
            </button>
        </div>

        
        
        <div style="background-color:white; height: 100%;" class="ttlop">



            @{

                foreach (var i in Model)
                {
                    <a class="nav-link" href="~/Class/Index/@i.MaLop" style="font-size:20px;color:black;text-decoration:none;">
                        <div style="padding:10px;padding-left:30px;overflow:hidden;text-overflow: ellipsis; white-space: nowrap;padding-right:20px" class="lop">


                            @i.TenLop


                        </div>
                    </a>
                }
            }

        </div>
    </div>
    
</div>