@{
    Layout = null;


}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8">
    <meta name="keywords" content="Report Login Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design">
    <!-- //Meta tag Keywords -->
    <link href="~/Content/css/forgotpass.css" rel="stylesheet" />
</head>
<body>
    

    <div class="forgotpassa">
        <div class="forgotpass">

            <h2>Forgot Password</h2>
            @using (Html.BeginForm("checkuser", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="group">
                    <input type="text" name="username" placeholder="Username" />
                </div>
                <div class="group">
                    @Html.TextBox("email","",new { @type = "text", @placeholder = "Email", @pattern = "[^@\\s]+@[^@\\s]+\\.[^@\\s]+", @title = "Invalid email address" })
                </div>
                <br />
                <button id="login" type="submit">xác nhận</button><br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger", @color = "White" })
                <br />

            }
            <p class="ss">Do have an account? <a href="~/Login/Login">Login</a></p>
        </div>
    </div>
</body>

</html>

