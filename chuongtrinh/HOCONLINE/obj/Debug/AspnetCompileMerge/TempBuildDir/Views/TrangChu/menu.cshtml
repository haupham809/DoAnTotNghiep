@model List<HOCONLINE.Models.LopHoc>

<link href="~/Content/animate.css" rel="stylesheet" />
<style type="text/css">
    .lop:hover {
        background-color: white;
        color:black;
    }

    .ttlop::-webkit-scrollbar {
        width: 5px;
        display:none;
    }

    ::-webkit-scrollbar-thumb {
        background: #1C1C1C;
    }

        ::-webkit-scrollbar-thumb:hover {
            background: #555;
        }
    .lop {
        color: white;
        background-color: #848484
    }
    .gopy {
        background-color: #848484;
        color: white;
    }
        .gopy:hover {
            background-color: white;
            color: black;
        }
    .menuleft {
        position: fixed;
        left: 0px;
        top: 0;
        background-color: white;
        width: 250px;
        height: 100%;
        margin-left: -250px;
        animation-name: example1;
        animation-duration: 0.5s;
    }
    .ttlop{
        overflow-y:scroll;
    }
    
    @@-webkit-keyframes example1 {
        0%   { left:-250px; top:0px;}
  100%  {background-color:blue; left:0px; top:0px;}

}
       @@-webkit-keyframes example2 {
  0%   { left:0px; top:0px;}
  100%  {background-color:blue; left:-250px; top:0px;}

}

 


</style>
<script type="text/javascript">
    $(document).ready(function () {
      
        
        $('.btnanmenu').click(function () {
            $('.menu').css("display", "none");
            $('.menuleft').css("margin-left", "-250px");
        });

    });

</script>
<div style="width:100%;height:100%;background-color:rgb(0,0,0,0.5);position: fixed;left:0px;top:0;">
    <div class="menuleft ">

        <div style="color:white;width:250px;background-image: linear-gradient(to left,#9A2EFE,#642EFE);">
            <a href="~/TrangChu/Index" style="height:100%;">
                <img class="d-inline-block align-top" src="~/Content/image/Icon/classroom-icon-png-8.jpg" height="30" width="30" style="margin-bottom:15px;margin-left:10px" />
            </a>

            <button style="background-color:transparent;border:0px;font-size:25px;margin-left:150px" class="glyphicon glyphicon-menu-hamburger btnanmenu">
            </button>
        </div>

        <div style="background-color :#585858;text-align:center">
            <label style="font-size:20px;color:white;margin:10px">Feedback</label>
        </div>
        <a href="~/Feedback/Sendfeedback" class="nav-link" style="font-size:20px;color:black;text-decoration:none;">
            <div style="padding:10px;padding-left:30px;overflow:hidden;text-overflow: ellipsis; white-space: nowrap;padding-right:20px;" class="gopy">
                <i class="glyphicon glyphicon-edit" aria-hidden="true"></i>

                Gửi góp ý


            </div>
        </a>
        <div style="background-color :#585858;text-align:center">
            <label style="margin:10px;font-size:20px;color:white">Class Room</label>
        </div>
        <div style="background-color: #848484; height: 100%;" class="ttlop">



            @{

                foreach (var i in Model)
                {
                    <a class="nav-link" href="~/Class/Index/@i.MaLop" style="font-size:20px;color:black;text-decoration:none;">
                        <div style="padding:10px;padding-left:30px;overflow:hidden;text-overflow: ellipsis; white-space: nowrap;padding-right:20px" class="lop">


                            @i.TenLop


                        </div>
                    </a>
                }
            }

        </div>
    </div>
</div>